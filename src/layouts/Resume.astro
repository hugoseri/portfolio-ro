---
import Layout from "@layouts/Layout.astro";
import Main from "@layouts/Main.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { SITE } from "@config";
import { Card } from "@components/Card";
import { PdfViewer } from "@components/PdfViewer";

---

<Layout title={`Resume | ${SITE.title}`}>
  <Header activeNav="resume" />
  <Main>
    <div class="mx-auto flex flex-col items-center w-full max-w-4xl">
    <Card className="flex flex-col items-center justify-center w-fit sm:py-0.5 sm:px-0.5 max-sm:py-0.5 max-sm:px-0.5">
      <PdfViewer pdfPath="../assets/files/resume.pdf" downloadButton client:load/>
    </Card> 
    </div> 
  </Main>

  <Footer />
</Layout>
